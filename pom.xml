        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <systemPropertyVariables>
                            <javax.xml.transform.TransformerFactory>
                                com.sun.org.apache.xalan.internal.xsltc.trax.TransformerFactoryImpl
                            </javax.xml.transform.TransformerFactory>
                            <spring.profiles.active>jetty</spring.profiles.active>
                        </systemPropertyVariables>
                        <includes>
                            <include>**/*Tests.java</include>
                            <include>**/*Tests2.java</include>
                            <include>**/*Tests3.java</include>
                        </includes>
                        <excludes>
                            <exclude>**/Abstract*.java</exclude>
                        </excludes>
                    </configuration>
                    <executions>
                        <execution>
                            <id>jetty-test</id>
                            <phase>integration-test</phase>
                            <goals>
                                <goal>test</goal>
                            </goals>
                            <configuration>
                                <skip>false</skip>
                                <systemProperties>
                                    <property>
                                        <name>spring.profiles.active</name>
                                        <value>jetty</value>
                                    </property>
                                </systemProperties>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.mortbay.jetty</groupId>
                    <artifactId>jetty-maven-plugin</artifactId>
                    <version>${jetty.version}</version>
                    <dependencies>
                        <dependency>
                            <groupId>org.apache.tomcat</groupId>
                            <artifactId>tomcat-el-api</artifactId>
                            <version>${tomcat.version}</version>
                        </dependency>
                        <dependency>
                            <groupId>org.apache.tomcat</groupId>
                            <artifactId>tomcat-jasper-el</artifactId>
                            <version>${tomcat.version}</version>
                        </dependency>
                    </dependencies>
                    <configuration>
                        <systemProperties>
                            <systemProperty>
                                <name>javax.xml.transform.TransformerFactory</name>
                                <value>com.sun.org.apache.xalan.internal.xsltc.trax.TransformerFactoryImpl</value>
                            </systemProperty>
                            <systemProperty>
                                <name>spring.profiles.active</name>
                                <value>jetty</value>
                            </systemProperty>
                        </systemProperties>
                        <connectors>
                            <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
                                <port>${test.jetty.httpPort}</port>
                                <maxIdleTime>60000</maxIdleTime>
                            </connector>
                            <connector
                                    implementation="org.eclipse.jetty.server.ssl.SslSelectChannelConnector">
                                <port>${test.jetty.httpsPort}</port>
                                <keystore>${server.keystore}</keystore>
                                <password>${server.keystore.password}</password>
                                <truststore>${server.truststore}</truststore>
                                <trustPassword>${server.truststore.password}</trustPassword>
                                <wantClientAuth>true</wantClientAuth>
                                <maxIdleTime>60000</maxIdleTime>
                            </connector>
                        </connectors>
                        <stopPort>9966</stopPort>
                        <stopKey>foo</stopKey>
                    </configuration>
                    <executions>
                        <execution>
                            <id>start-jetty</id>
                            <phase>pre-integration-test</phase>
                            <goals>
                                <goal>deploy-war</goal>
                            </goals>
                            <configuration>
                                <webAppConfig>
                                    <contextPath>/${project.artifactId}</contextPath>
                                </webAppConfig>
                                <scanIntervalSeconds>0</scanIntervalSeconds>
                                <daemon>true</daemon>
                            </configuration>
                        </execution>
                        <execution>
                            <id>stop-jetty</id>
                            <phase>post-integration-test</phase>
                            <goals>
                                <goal>stop</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
