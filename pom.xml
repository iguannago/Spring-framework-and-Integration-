            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${antplugin.version}</version>
                <executions>
                     <execution>
                         <id>clean-module-properties</id>
                         <phase>clean</phase>
                         <configuration>
                             <target>
                                 <delete verbose="true" quiet="true">
                                     <fileset dir="${project.basedir}/src/test/resources/" includes="**/project*.properties"/>
                                 </delete>
                             </target>
                         </configuration>
                         <goals>
                             <goal>run</goal>
                         </goals>
                     </execution>
                    <execution>
                        <id>create-module-properties</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <target>
                                <mkdir dir="${project.basedir}/src/test/resources" />
                                <echo file="${project.basedir}/src/test/resources/project-module-name.properties">module.name=${project.artifactId}</echo>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
